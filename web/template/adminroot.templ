package template

templ AdminRoot(deployment, versionName, versionRef string) {
<!DOCTYPE html>
<html lang="en">
@Head("Administration Tools", "admin_root.js", false, versionRef)

<body>
<div class="container-fluid">
@Header(deployment)
@Nav("")
<h1 id="doc-title">Administration Tools</h1>

@ErrorInfo()

  <ul>
    <li>
      <a href="/ims/app/admin/actionlogs">
        Action Logs
      </a>
    </li>
    <li>
      <a href="/ims/app/admin/types">
        Incident Types
      </a>
    </li>
    <li>
      <a href="/ims/app/admin/events">
        Events and Permissions
      </a>
    </li>
    <li>
      <a href="/ims/app/admin/streets">
        <s>Event Concentric Streets</s>
      </a> - no longer used as of late 2025
    </li>
    <li>
      <a href="/ims/app/admin/destinations">
        Event Destinations
      </a>
    </li>
    <li>
      <a href="/ims/app/admin/debug">
        Server Debugging Details
      </a>
    </li>
  </ul>
@Footer(versionName, versionRef)
</div>
</body>
</html>
}
