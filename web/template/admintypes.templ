package template

templ AdminTypes(deployment string) {
<!DOCTYPE html>
<html lang="en">
@Head("Edit Incident Types", "admin_types.js", false)

<body>
<div class="container-fluid">
@Header(deployment)
@Nav("")
<h1 id="doc-title">Edit Incident Types</h1>
@LoadingOverlay()

    <div class="modal no-print" id="editIncidentTypeModal" tabindex="-1" aria-labelledby="editIncidentTypeModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <p class="modal-title fs-5" id="editIncidentTypeModalLabel">Edit Incident Type</p>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" />
          </div>
          <div class="modal-body row">
            <div class="input-group mb-3">
              <label for="edit_incident_type_name" class="control-label input-group-text">Name</label>
              <input id="edit_incident_type_name" type="text" class="form-control form-control-sm" onchange="setIncidentTypeName(this);" />
            </div>
            <div class="input-group mb-3">
              <label for="edit_incident_type_description" class="control-label input-group-text">Description</label>
              <textarea id="edit_incident_type_description" type="text" class="form-control form-control-sm" onchange="setIncidentTypeDescription(this);"></textarea>
            </div>
          </div>
        </div>
      </div>
    </div>

  <div class="row" id="incident_types_container">

    <div id="incident_types" class="col-sm-12 incident_types">
      <div class="card">
        <label class="card-header">Incident types</label>
        <ul class="list-group list-group-small list-group-flush card-body">
          <li class="list-group-item ps-3">
            <button class="badge btn btn-primary float-end badge-visible"
                    onclick="hideIncidentType(this)">
              Active
            </button>
            <button class="badge btn btn-warning float-end badge-hidden"
                    onclick="showIncidentType(this)">
              Hidden
            </button>
            <button class="show-edit-modal badge btn btn-primary float-end me-2">
              Edit
            </button>
          </li>
        </ul>
        <div class="card-footer">
          <label>Add:</label>
          <input
                  class="form-control input-sm auto-width"
                  type="text" inputmode="verbatim"
                  disabled=""
                  placeholder="Chooch"
                  onchange="createIncidentType(this)"
          />
        </div>
      </div>
    </div>
  </div>
@Footer()
</div>
</body>
</html>

}
