package template

templ SanctuaryStays(deployment, versionName, versionRef, eventName string) {
<!DOCTYPE html>
<html lang="en">
@Head("Sanctuary Stays | " + eventName, "sanctuary_stays.js", true, versionRef)

<body>
<div class="container-fluid">
@Header(deployment)
@Nav(eventName)

<div class="d-flex justify-content-between">
  <h1 id="doc-title">Sanctuary Stays</h1>
</div>

@ErrorInfo()

    <!-- Help modal for stays page -->
    <div class="modal no-print" id="helpModal" tabindex="-1" aria-labelledby="helpModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <p class="modal-title fs-5" id="helpModalLabel">Sanctuary Stays help</p>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" />
          </div>
          <div class="modal-body">
            <p class="mt-2 mb-0">Keyboard shortcuts</p>
            <ul>
              <li><code>n</code>: create (n)ew Stay <br /></li>
              <li><code>/</code>: jump to search field <br /></li>
              <li><code>m</code>: (m)ulti-search <br /></li>
            </ul>
            <p class="mt-2 mb-0">In the search field</p>
            <ul>
              <li>Type a Stay number then press <code>⏎</code> to be redirected to that Stay</li>
              <li>Search by regular expression by enclosing a pattern with slashes, e.g. <code>/r.nger/</code> or <code>/\b(dog|cat)\b/</code></li>
              <li>All searches are case-insensitive</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    @MultisearchModal()

    <div class="row">
      <div class="col-sm-7">
        <div class="btn-group new_stay no-print">
          <a href="./stays/new">
            <button
                id="new_stay"
                type="button"
                class="btn btn-sm btn-default btn-primary"
            >
              New
            </button>
          </a>
        </div>
        { }
        <button
            id="show_rows"
            type="button"
            class="btn btn-light btn-sm dropdown-toggle"
            data-bs-toggle="dropdown"
        >

          <span class="selection">All Rows</span>
        </button>
        <ul class="dropdown-menu">
          <li id="show_rows_all" onclick="showRows('all', true); return false;">
            <a href="#" class="name dropdown-item">All Rows</a>
          </li>
          <li id="show_rows_25" onclick="showRows('25', true); return false;">
            <a href="#" class="name dropdown-item">25 Rows</a>
          </li>
          <li id="show_rows_50" onclick="showRows('50', true); return false;">
            <a href="#" class="name dropdown-item">50 Rows</a>
          </li>
          <li id="show_rows_100" onclick="showRows('100', true); return false;">
            <a href="#" class="name dropdown-item">100 Rows</a>
          </li>
          <li class="border-top">
            <a href="/ims/app/settings" class="name dropdown-item">Change default</a>
          </li>
        </ul>
      </div>

      <div class="col-sm">
        <div id="search_container" class="form-group ms-auto">
          <div class="flex-input-container no-print">
            <a href="#" id="search-icon" class="me-1 align-content-center link-body-emphasis"
                title="Click here for multi-search" onclick="toggleMultisearchModal(); return false;">
              <svg fill="currentColor" class="bi">
                <use href="#search" />
              </svg>
            </a>
            <label for="search_input" class="control-label hidden" aria-label="Search">
              Search
            </label>
            <input
                id="search_input"
                type="search"
                class="form-control search-box"
                placeholder="Press &quot; ⁄ &quot; to search"
                inputmode="latin"
                autocomplete="off"
                aria-controls="stays_table"
            />
          </div>
        </div>
      </div>

    </div>

    <table id="stays_table" class="table table-striped table-hover">
      <thead>
      <tr>
        <th><abbr title="Stay#">#</abbr></th>
        <th>IMS#</th>
        <th>Arrived</th>
        <th>Departed</th>
        <th>Name</th>
      </tr>
      </thead>
      <tbody/>
      <tfoot>
      <tr>
        <th><abbr title="Stay#">#</abbr></th>
        <th>IMS#</th>
        <th>Arrived</th>
        <th>Departed</th>
        <th>Name</th>
      </tr>
      </tfoot>
    </table>

@Footer(versionName, versionRef)
</div>
</body>
</html>

}
